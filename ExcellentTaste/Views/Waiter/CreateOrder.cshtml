@model List<ExcellentTaste.Models.FoodOrder>
@{
    ViewBag.Title = "CreateOrder";
}
<h2>CreateOrder</h2>
<form method="post">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Food.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Food.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Food.FoodOptions)
            </th>
            <th></th>
        </tr>
        @if (Model.Count != 0)
        {
            for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    @Html.HiddenFor(modelItem => Model[i].Food.FoodId)
                    <td>
                        @Model[i].Food.Name
                    </td>
                    <td>
                        @Model[i].Food.Price
                    </td>
                    <td>
                        <span id="orderAmount">
                            @Html.DisplayFor(modelItem => Model[i].Amount)
                        </span>
                        @Html.HiddenFor(modelItem => Model[i].Amount, new { @id = "hiddenOrderAmount" })
                    </td>
                    <td>
                        @if (Model[i].Food.FoodOptions.Count != 0)
                        {
                            @Html.DropDownListFor(modelItem => Model[i].Food.FoodOptions, Model[i].Food.SelectListFoodOptions())
                        }
                    </td>
                    <td>
                        <input type=button onclick="incrementAmount()" value="+" />
                    </td>
                </tr>
            }
        }

    </table>
    <input type="submit" value="Order" formmethod="post" />
</form>



<script>
    function incrementAmount() {
        var orderAmount = document.getElementById("orderAmount").innerHTML;
        orderAmount++;
        document.getElementById("orderAmount").innerHTML = orderAmount;
        var hiddenOrderAmount = document.getElementById("hiddenOrderAmount").value;
        hiddenOrderAmount++;
        document.getElementById("hiddenOrderAmount").value = hiddenOrderAmount;
        console.log("Amount +");
    }

</script>